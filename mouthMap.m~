function mouthMap = mouthMap(im)

YCbCr = rgb2ycbcr(im); %rgb till ycbcr
YCbCr = im2double(YCbCr); %change to double

Cb = YCbCr(:,:,2);
Cr = YCbCr(:,:,3);

crcb = Cr./Cb;
cr2 = Cr.^2;

%mean of cr^2 and cr/cb to
eta = 0.95*mean(cr2(:))/mean(crcb(:));

mouthMap = cr2.*((cr2-(eta.*crcb)).^2);

SE = strel('disk', 10);
mouthMap = imclose(mouthMap, SE);

end

